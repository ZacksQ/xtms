<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>象塔直播-直播回看</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <link rel="stylesheet" href="css/global.css">
  <link rel="stylesheet" href="css/iconfont/iconfont.css">

  <link rel="stylesheet" href="css/settings.css">
  <link rel="stylesheet" href="layui/css/layui.css">
</head>
<body>
<div class="container">
  <header class="top"></header>
  <section class="body">
    <div class="wrapper">
      <header class="cn"></header>
      <div class="content-warp">
        <div class="leftnav fl" id="navBar">
        </div>
        <div class="content">
          <div class="long_box fl" style="position: relative">
            <div class="long_header">
              <span>直播回看</span>
            </div>
            <div class="long_switch">
              <form class="layui-form" action="">
                <div class="layui-form-item">
                  <label class="layui-form-label"
                         style="width:140px;font-size:18px;text-align: left">直播视频显示：</label>
                  <div class="layui-input-block">
                    <input type="checkbox" name="open" lay-skin="switch" lay-filter="switchTest"
                           title="开关">
                    <div class="layui-unselect layui-form-switch layui-form-onswitch"><i></i></div>
                  </div>
                </div>
              </form>
              <span style="position: absolute;top:11px;left:260px">(功能开启后，当您不在直播时，用户可点击播放该视频)</span>
            </div>
            <div class="long_content">
              <p class="title">预览：</p>
              <!--<div class="review_preview_box">-->
                <!--<video src="video/video_exp.mp4" controls></video>-->
                <!--<button class="btn-merge" style="font-size: 14px;position: absolute;bottom:0;right: 140px;padding:10px 20px" id="selectVideo">选择视频</button>-->
              <!--</div>-->
              <div class="live-ctrl-video-warp">
                <div class="live-video">
                  <script type="text/javascript" src="player/sewise.player.min.js"></script>
                </div>
                <!--<div class="break-live">-->
                  <!--<button class="btn-mid" id="startlive">开启直播</button>-->
                  <!--<button class="btn-mid" id="breaklive">断开直播</button>-->
                <!--</div>-->
              </div>
            </div>
            <div class="floor_bottom">
              <button class="btn-merge fr">保存</button>
              <button class="btn-cancel fr" style="margin-right:0">取消</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<script src="js/jquery-1.9.1.min.js"></script>
<script src="layui/layui.js"></script>
<script src="js/use.js"></script>
<script src="js/main.js"></script>
<script>
  getcn();
  layui.use('form', function () {
    var form = layui.form();
  });
  layui.use('laydate', function () {
    var laydate = layui.laydate;
  });
  $('body').on('click','#selectVideo',function(){
    layui.use(['layer', 'form'], function(){
      var layer = layui.layer;
      layer.open({
        type: 0,
        area: ['660px','600px'],
        title : `添加视频
			  <div class="fr orderby">
			  排序：
				  <select>
				  	<option>默认排序</option>
				  	<option>最后直播时间</option>
				  	<option>累计观看时长</option>
				  	<option>累计观看人数</option>
				  </select>
			  </div>
			  `,
        btn: ['确定','取消'],
        // content: '<div class="dialogfont center"><div class="red">合并成功！</div>请直接到媒体库查看</div>'
        content: `<div class="merge-addmedia">
			  	<ul class="media-list">
								<li class="selected">
									<div class="media-selectstate" onclick="selectedmedia(this)"></div>
									<div class="media-cover"></div>
									<div class="media-des">
										<h3>201702081351</h3>
										<div>时间：2017-02-08 分辨率：1280*720</div>
										<button class="btn-media">原片</button>
									</div>
								</li>
								<li>
									<div class="media-selectstate" onclick="selectedmedia(this)"></div>
									<div class="media-cover"></div>
									<div class="media-des">
										<h3>201702081351</h3>
										<div>时间：2017-02-08 分辨率：1280*720</div>
										<button class="btn-media">原片</button>
									</div>
								</li>
								<li class="addmedia">
									<input type="file" class="uploadmediafile" />
									<div></div>
									<p>上传新视频</p>
								</li>
							</ul>
			  </div>`
        ,closeBtn: 0,
        move:false,
        yes:function(index, layero){
          layer.close(index);
        }
      });
    });
  })
</script>
</body>
</html>