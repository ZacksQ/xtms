<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>象塔直播-互动打赏</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <link rel="stylesheet" href="css/global.css">
  <link rel="stylesheet" href="css/settings.css">
  <link rel="stylesheet" href="layui/css/layui.css">
  <script>var nav = 'reward';</script>
</head>
<body>
<div class="container">
  <header class="top"></header>
  <section class="body">
    <div class="wrapper">
      <header class="cn"></header>
      <div class="content-warp">
        <div class="leftnav fl" id="navBar">
        </div>
        <div class="content">
          <div class="content_l fl">
            <img src="images/reward.png" alt="">
          </div>
          <div class="content_r fl">
            <div class="window_box">
              <div class="window_title">
                <span>互动打赏</span>
              </div>
              <!--开关层-->
              <div class="window_content">
                <div class="floor_top">
                  <form class="layui-form" action="">
                    <div class="layui-form-item">
                      <label class="layui-form-label"
                             style="width:100px;font-size:18px;text-align: left">打赏开关：</label>
                      <div class="layui-input-block">
                        <input type="checkbox" name="open" lay-skin="switch" lay-filter="switchTest" id="switch"
                               title="开关">
                        <div class="layui-unselect layui-form-switch layui-form-onswitch"><i></i></div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
              <!--内容层-->
              <div class="floor_center" style="padding:0">
                <img src="images/use_process.png" alt="" class="use_process">
              </div>
              <!--按钮层-->
              <!--<div class="floor_bottom">-->
                <!--<button class="btn-merge fr">保存</button>-->
              <!--</div>-->
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<script src="js/jquery-1.9.1.min.js"></script>
<script src="layui/layui.js"></script>
<script src="js/main.js"></script>
<script src="js/use.js"></script>
<script>
  getHardsize();
  function getHardsize() {
    $.ajax({
      type:"post",
      url:"http://www.xiangtazhibo.com/newlive/mAccount/getHardSize.do",
      dataType:"json",
      success:function (data) {
        if(data.code==1013){
          location.href="http://www.xiangtazhibo.com/newlive/webow/login.html";
        }
      }
    });
  }
</script>
<script>
  getcn('channel');
  var liveid = null;
 $(function(){
   $.ajax({
     type: "POST",
     dataType: 'JSON',
     url: website + 'mivechannel/getLiveSet.do',
     data:{
      'liveid':liveid,
       'types':1
     },
     success: function (result) {
       if (result) {
        var livereward = result.data.livereward;
         if(result.success){
           if(livereward == 0){
             $('#switch').prop('checked',false);
           }else{
             $('#switch').prop('checked',true);
             $('.layui-unselect').addClass('layui-form-onswitch');
           }
         }else{
           layer.msg(result.msg);
         }
       }
     },
     error: function () {
       console.log("error");
     }
   })

   layui.use('form', function () {
     var form = layui.form();
   });
   $('body').on('click','.layui-unselect',function(){
     var status = $('#switch').is(':checked') ? 1 : 0;
     $.ajax({
       type: "POST",
       dataType: 'JSON',
       url: website + 'mLivefunctions/setLivefun.do',
       data: {
         'liveid':liveid,
         'functiontype':1,
         'status':status
       },
       beforeSend: function () {
         $('#submitBtn').attr('disabled', true);
       },
       success: function (result) {
         if (result) {
           if(result.success){
             layer.msg('修改成功');
           }else{
             layer.msg(result.msg)
           }
         }

       },
       complete: function () {
         $('#submitBtn').attr('disabled', false);
       },
       error: function () {
         console.log("error");
       }
     })
   })
 })
</script>
</body>
</html>